{
  "compilerOptions": {
    "strict": true,                     // enable all strict-mode checks
    //"noImplicitAny": true,              // catch unintended anyâ€™s
    //"noUnusedLocals": true,             // guard dead code
    //"noUnusedParameters": true,
    //"noImplicitReturns": true,
    //"noFallthroughCasesInSwitch": true,

    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,                    // still process .js during migration
    //"checkJs": false,                   // or set to true once JS is typed
    "resolveJsonModule": true,
    //"noEmit": true,
    "traceResolution": true,
    //"lib": ["DOM", "ES2020", "DOM.Iterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "shared/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "**/*.d.ts",
  ],
  "exclude": [
    ".history",
    "gulpfile.js",
  ]
}